{
  "name": "<%=projectName%>",
  "version": "<%=version%>",
  "description": "<%=description%>",
  "main": "main.js",
  "scripts": {
    "commit": "git-cz",
    "release": "standard-version",
    "clean": "rimraf dist && rimraf lib",
    "clean:example": "rimraf example/lib",
    "dev": "npm run clean:example && rollup --watch --config scripts/rollup/rollup.config.dev.js",
    "build": "npm run clean && tsc --project tsconfig.build.json && rollup --config scripts/rollup/rollup.config.prod.js",
    "eslint": "eslint src --fix --ext .ts",
    "push:publish": "npm run build && git push --follow-tags origin master && npm publish",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "test:report": "./node_modules/http-server/bin/http-server ./coverage -p 8087 -o  -c-1",
    "coveralls": "npm run test && nyc report --reporter=text-lcov | coveralls"
  },
  "author": {
    "name": "<%=authorName%>",
    "email": "<%=authorEmail%>",
    "url": "<%=authorUrl%>"
  },
  "license": "<%=license%>",
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.5.5",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/expect": "^1.20.4",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.6.9",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "canvas": "^2.5.0",
    "chai": "^4.2.0",
    "commitizen": "^4.0.3",
    "commitlint-config-cz": "^0.12.1",
    "coveralls": "^3.0.5",
    "cross-env": "^5.2.0",
    "cz-customizable": "^6.2.0",
    "eslint": "^5.16.0",
    "esm": "^3.2.25",
    "http-server": "^0.11.1",
    "husky": "^3.0.2",
    "jsdom": "^15.1.1",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^9.2.1",
    "mocha": "^6.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^14.1.1",
    "rimraf": "^2.6.3",
    "rollup": "^1.18.0",
    "rollup-plugin-alias": "^1.5.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-filesize": "^6.1.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-typescript2": "^0.22.1",
    "rollup-plugin-uglify": "^6.0.2",
    "source-map-support": "^0.5.13",
    "standard-version": "^7.0.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3",
    "uglify-es": "^3.3.9"
  },
  "files": [
    "dist/*.js",
    "lib"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint src --ext .ts",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "types": "./lib/types/main.d.ts",
  "module": "dist/<%=projectName%>.esm.js",
  "unpkg": "dist/<%=projectName%>.min.js",
  "keywords": [
    <%_
      keywords.map(function(word, index){
    -%>
    "<%=word%>"<%=(index == (keywords.length - 1) ? '': ',')%>
    <%_
      })
    -%>
  ],
  "homepage": "<%=homepage%>",
  "repository": {
    "type": "<%=repositoryType%>",
    "url": "<%=repositoryUrl%>"
  },
  "dependencies": {},
  "nyc": {
    "include": [
      "src/**/*.ts",
      "test/**/*.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  }
}
